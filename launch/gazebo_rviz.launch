<launch>
    <!-- arguments for the urdf xacro file -->
    <arg name="rviz_config" default="$(find realsense_gazebo_description)/rviz/urdf.rviz"/>
    <arg name="model"       default="$(find realsense_gazebo_description)/urdf/singlecamera_d435i.urdf.xacro"/>

    <!-- <arg name="rviz_config" default="$(find realsense_gazebo_description)/rviz/urdf_multicamera.rviz"/> -->
    <!-- <arg name="model"       default="$(find realsense_gazebo_description)/urdf/multicamera.urdf.xacro"/> -->

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model) use_nominal_extrinsics:=true add_plug:=true" />
    <node pkg="robot_state_publisher" type="robot_state_publisher"  name="robot_state_publisher">
        <param name="publish_frequency" type="double" value="30.0" />
    </node>

    <!-- Gazebo Visualization -->
    <include file="$(find realsense_gazebo_description)/launch/gazebo.launch">
        <arg name="model" value="$(arg model)" />
    </include>

    <!-- Rviz Visualization -->
    <arg name="gui" default="True" />
    <param name="use_gui" value="$(arg gui)" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find realsense_gazebo_description)/rviz/urdf.rviz" required="true" />
</launch>